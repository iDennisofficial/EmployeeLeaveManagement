<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/top_app_bar"
        android:layout_marginTop="20dp"
        app:navigationIcon="@drawable/arrow_back"
        app:liftOnScroll="true"
        app:navigationIconTint="@color/black" >

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:fontFamily="@font/poppins_bold"
            android:gravity="center"
            tools:ignore="HardcodedText" />
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        tools:context=".View.HOD.HoDDashBoard"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/CardViewEmployeeInfo"
                style="?attr/materialCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:checkable="true"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeWidth="0dp"
                android:focusable="true"
                app:cardCornerRadius="5dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/CardViewCircularEmployeeImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:id="@+id/CircularEmployeeImg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@string/employee_picture"
                            android:padding="1dp"
                            android:src="@drawable/idennisofficial" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/TextViewEmployeeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/CardViewCircularEmployeeImg"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Employee Name"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />



                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/TextViewEmployeeProfession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/TextViewEmployeeName"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@id/CardViewCircularEmployeeImg"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:text="@string/Professional_title_hod"
                        android:textColor="@color/grey" />



                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TxtViewDashBoard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:fontFamily="@font/poppins_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CardViewEmployeeInfo" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TxtViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="185dp"
                android:layout_marginTop="10dp"
                android:text="Date"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.841"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CardViewEmployeeInfo" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/CardviewLeaveTypes"
                style="?attr/materialCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@id/TxtViewDashBoard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeWidth="0dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/LayoutRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/CardViewRequests"
                            style="?attr/materialCardViewStyle"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:elevation="7dp"
                            android:focusable="true"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <View
                                    android:id="@+id/backgroundViewRequests"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:background="@drawable/chuoblue_bg"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <ImageView
                                    android:id="@+id/DashboardImage1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="1dp"
                                    android:contentDescription="@string/annual_calender"
                                    android:src="@drawable/leaverequest"
                                    app:layout_constraintStart_toStartOf="@id/backgroundViewRequests"
                                    app:layout_constraintTop_toTopOf="@id/backgroundViewRequests"
                                    app:layout_constraintEnd_toEndOf="@id/backgroundViewRequests"
                                    app:layout_constraintBottom_toBottomOf="@id/backgroundViewRequests"
                                    app:tint="@color/white" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/TextViewLeaveRequests"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/DashboardImage1"
                                    app:layout_constraintVertical_bias="0.0" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/TextViewAnnual"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="100dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Requests"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/CardViewReviewed"
                            style="?attr/materialCardViewStyle"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:elevation="7dp"
                            android:focusable="true"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <View
                                    android:id="@+id/backgroundViewReviewed"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:background="@drawable/chuobrown_bg"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <ImageView
                                    android:id="@+id/DashboardImage2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/annual_calender"
                                    android:src="@drawable/reviewed"
                                    android:layout_marginTop="1dp"
                                    app:layout_constraintStart_toStartOf="@id/backgroundViewReviewed"
                                    app:layout_constraintTop_toTopOf="@id/backgroundViewReviewed"
                                    app:layout_constraintEnd_toEndOf="@id/backgroundViewReviewed"
                                    app:layout_constraintBottom_toBottomOf="@id/backgroundViewReviewed"
                                    app:tint="@color/white" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/TextViewLeaveReviewed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/DashboardImage2"
                                    app:layout_constraintVertical_bias="0.0" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/TextViewSick"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="100dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Reviewed"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>




                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LayoutRow2"
                        android:layout_below="@id/LayoutRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/CardViewCancelled"
                            style="?attr/materialCardViewStyle"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:elevation="7dp"
                            android:focusable="true"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <View
                                    android:id="@+id/backgroundViewCancel"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:background="@drawable/chuored_bg"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <ImageView
                                    android:id="@+id/DashboardImage4"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/annual_calender"
                                    android:src="@drawable/leavecancelled"
                                    android:layout_marginTop="1dp"
                                    app:layout_constraintStart_toStartOf="@id/backgroundViewCancel"
                                    app:layout_constraintTop_toTopOf="@id/backgroundViewCancel"
                                    app:layout_constraintEnd_toEndOf="@id/backgroundViewCancel"
                                    app:layout_constraintBottom_toBottomOf="@id/backgroundViewCancel"
                                    app:tint="@color/white" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/TextViewLeaveCancelled"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/DashboardImage4"
                                    app:layout_constraintVertical_bias="0.0" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/TextViewMaternity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="100dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Cancelled"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/CardViewOnLeave"
                            style="?attr/materialCardViewStyle"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:checkable="true"
                            android:clickable="true"
                            android:elevation="7dp"
                            android:focusable="true"
                            app:cardElevation="10dp"
                            app:cardCornerRadius="10dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">

                                <View
                                    android:id="@+id/backgroundView"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:background="@drawable/chuoyellow_bg"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <ImageView
                                    android:id="@+id/DashboardImage5"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/annual_calender"
                                    android:src="@drawable/allowedonleave"
                                    android:layout_marginTop="1dp"
                                    app:layout_constraintStart_toStartOf="@id/backgroundView"
                                    app:layout_constraintTop_toTopOf="@id/backgroundView"
                                    app:layout_constraintEnd_toEndOf="@id/backgroundView"
                                    app:layout_constraintBottom_toBottomOf="@id/backgroundView"
                                    app:tint="@color/white" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/TextViewOnLeave"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/DashboardImage5"
                                    app:layout_constraintVertical_bias="0.0" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/TextViewPaternity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="100dp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="On Leave"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>






                    </LinearLayout>

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TxtViewRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Leave"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:fontFamily="@font/poppins_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CardviewLeaveTypes" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewRecent"
                style="?attr/materialCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:checkable="true"
                android:clickable="true"
                app:layout_constraintTop_toBottomOf="@id/TxtViewRecent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeWidth="0dp"
                android:focusable="true"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gradient_background"
                    android:padding="10dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/CardViewCircularProfileImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:id="@+id/profileImageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@string/employee_picture"
                            android:padding="1dp"
                            android:src="@drawable/idennisofficial" />

                    </com.google.android.material.card.MaterialCardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/usernameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employee Name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/usernameTextView"
                            android:layout_marginTop="4dp"
                            android:text="Date and Time of Leave Request"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/typeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dateTextView"
                            android:layout_marginTop="4dp"
                            android:text="Type of Leave"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/statusTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/typeTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp"
                            android:background="@color/chuoyellow"
                            android:padding="3dp"
                            android:text="Leave Status"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TxtViewToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Attendance"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:fontFamily="@font/poppins_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardViewRecent" />

            <LinearLayout
                android:id="@+id/LayoutTodayAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TxtViewToday">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/CardViewPresent"
                    style="?attr/materialCardViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:elevation="7dp"
                    android:focusable="true"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <View
                            android:id="@+id/backgroundViewPresent"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/white_round_bg"
                            android:layout_marginTop="-10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/TextViewPresent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="40"
                            android:textColor="@color/chuoblue"
                            android:textSize="18sp"

                            app:layout_constraintTop_toTopOf="@id/backgroundViewPresent"
                            app:layout_constraintBottom_toBottomOf="@id/backgroundViewPresent"
                            app:layout_constraintStart_toStartOf="@id/backgroundViewPresent"
                            app:layout_constraintEnd_toEndOf="@id/backgroundViewPresent" />

                        <com.google.android.material.textview.MaterialTextView
